<?xml version="1.0" encoding="UTF-8" ?>
<configuration status="info">

    <properties>
        <property name="JUNIT_FILE" value="./logs//carrot-core-junit.log"/>
    </properties>

    <appenders>
        <RollingRandomAccessFile name="APP_SIZE_APPENDER" fileName="${JUNIT_FILE}"
                                 filePattern="${JUNIT_FILE}.%d{yyyy-MM-dd}.%i.gz">
            <PatternLayout pattern="%d %p %c{1.} [%t] %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="250 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingRandomAccessFile>

    </appenders>

    <Loggers>
        <Logger level="DEBUG" name="org.bigbase" additivity="false">
            <appender-ref ref="APP_SIZE_APPENDER"/>
        </Logger>

        <Root level="ERROR">
            <appender-ref ref="APP_SIZE_APPENDER"/>
        </Root>
    </Loggers>

</configuration>
